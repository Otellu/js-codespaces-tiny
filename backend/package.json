{
  "name": "pizza-shop-backend",
  "version": "1.0.0",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "echo 'ðŸš€ Starting backend server...' && nodemon src/app.js",
    "db:init": "node src/migrations/seed-mongo.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "webhook:test": "echo 'N/A for mini assignment'"
  },
  "dependencies": {
